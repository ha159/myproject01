<%- include ../public/header.ejs%>

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <%- include ../public/aslideleft.ejs%>
			
          
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">用户管理
                </li>
                <li class="active">用户增加
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加用户
                </div>
                <div class="panel-body">
                   
                  
                        <form action="doUserAdd" method="post" enctype="multipart/form-data" onsubmit="return check(this)">
							  <div class="form-group">
							    <label for="proName">用户名称:</label>
							    <input type="text" name='username' class="form-control" id="proName">
							    <div id="failTip1" class="alert alert-danger" role="alert">用户不能为空！</div>		
							  </div>
							  
							  <div class="form-group">
							    <label for="price">用户密码:</label>
							    <input type="text" name='password' class="form-control" id="price">
							    <div id="failTip2" class="alert alert-danger" role="alert">密码不能为空！</div>		
							  </div>
							  <div class="form-group">
							    <label for="expressPrice">确认密码:</label>
							    <input type="text" name='qrpassword' class="form-control" id="expressPrice">
							    <div id="failTip3" class="alert alert-danger" role="alert">两次输入密码不一致！</div>		
							  </div>
							  														  
							  <button type="submit" class="btn btn-primary">提交</button>
							</form>
                    </div>
               


            </div>

        </div>
    </div>
</div>

<%- include ../public/footer.ejs%>

<script type="text/javascript">
	function check(form){
		var tip1 = document.getElementById('failTip1');
		var tip2 = document.getElementById('failTip2');
		var tip3 = document.getElementById('failTip3');
		
		if(form.username.value==''){
			tip1.style.display = 'block';
			form.username.focus();
			
			return false;
		}else if(form.password.value==''){
			tip2.style.display = 'block';
			form.password.focus();
			return false;
		}else if(form.password.value!=form.qrpassword.value){
			tip3.style.display = 'block';
			form.qrpassword.focus();
			return false;
		}
		
	}
</script>
<style type="text/css">
	#failTip1,#failTip2,#failTip3{display: none;}
</style>